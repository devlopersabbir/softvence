{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build:packages": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"],
      "cache": false
    },
    "build": {
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    }
  }
}
